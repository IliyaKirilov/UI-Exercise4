<mvc:View controllerName="kpmg.home.Exercise4.controller.Painter" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" displayBlock="true"
	xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="Welcome to our Gallery !">
					<content>
						<Panel>
							<List headerText="Painter">
								<StandardListItem title="Firstname" description="{PaintersModel>Firstname}"/>
								<StandardListItem title="Lastname" description="{PaintersModel>Lastname}"/>
								<StandardListItem title="Age" description="{PaintersModel>Age}"/>
								<StandardListItem title="HomeCountry" description="{PaintersModel>BornIn}"/>
							</List>
							
						</Panel>
						
						<Panel>
							<Button text="Find all Paintings here! " press=".onPaintings"></Button>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>